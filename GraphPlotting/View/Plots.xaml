<Window x:Class="GraphPlotting.View.Plots"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphPlotting.View"
        xmlns:uc="clr-namespace:GraphPlotting.View"
        xmlns:vm="clr-namespace:GraphPlotting.ViewModel"
        mc:Ignorable="d"
        Title="Plots" Height="1000" Width="800">
    <Window.Resources>
        <vm:PlotsVM x:Key="vm"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource vm}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <uc:PlotControl x:Name="Plot1" Grid.Row="0" Grid.Column="0" Id="1"></uc:PlotControl>
        <uc:PlotControl x:Name="Plot2" Grid.Row="1" Grid.Column="0" Id="2"></uc:PlotControl>
        <uc:PlotControl x:Name="Plot3" Grid.Row="1" Grid.Column="1" Id="3"></uc:PlotControl>
        <uc:PlotControl x:Name="Plot4" Grid.Row="2" Grid.Column="0" Id="4"></uc:PlotControl>
    </Grid>
</Window>
